{
  "name": "example-api",
  "version": "1.0.0",
  "description": "Example GraphQL API w/ InversifyJS",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/dialexa/example-api.git"
  },
  "author": "Luke Gordon <luke@dialexa.com> (https://dialexa.com)",
  "private": true,
  "bugs": {
    "url": "https://github.com/dialexa/example-api/issues"
  },
  "homepage": "https://github.com/dialexa/example-api#readme",
  "main": "index.ts",
  "scripts": {
    "build": "node_modules/.bin/webpack",
    "db:create": "NODE_ENV=$NODE_ENV ts-node scripts/db-create",
    "lint": "node_modules/.bin/tslint --project .",
    "lint:fix": "node_modules/.bin/tslint --fix --project .",
    "migrate:latest": "node_modules/.bin/knex migrate:latest",
    "migrate:make": "NODE_ENV=$NODE_ENV node_modules/.bin/knex migrate:make",
    "migrate:rollback": "node_modules/.bin/knex migrate:rollback",
    "prepare": "patch-package",
    "rebuild": "bin/rebuild.sh",
    "reset": "bin/reset.sh",
    "restart": "bin/restart.sh",
    "seed:make": "NODE_ENV=$NODE_ENV node_modules/.bin/knex seed:make",
    "seed:run": "NODE_ENV=$NODE_ENV node -r tsconfig-paths/register node_modules/.bin/knex seed:run",
    "start": "node dist/server.js",
    "start:dev": "node_modules/.bin/nodemon",
    "test": "NODE_ENV=test docker-compose run server node_modules/.bin/mocha"
  },
  "lint-staged": {
    "*.ts": [
      "yarn lint",
      "yarn prettier",
      "git add"
    ]
  },
  "dependencies": {
    "@dialexa/knex-plus": "~0.2.3",
    "apollo-errors": "^1.9.0",
    "apollo-resolvers": "~1.4.1",
    "apollo-server-express": "~2.0.3",
    "date-fns": "~1.29.0",
    "express": "~4.16.3",
    "graphql": "^0.13.2",
    "inversify": "^4.13.0",
    "joi": "^13.6.0",
    "knex": "~0.15.2",
    "lodash": "~4.17.10",
    "merge-graphql-schemas": "~1.5.3",
    "pg": "~7.4.3",
    "reflect-metadata": "^0.1.12"
  },
  "devDependencies": {
    "@types/chai": "~4.1.4",
    "@types/chance": "~1.0.1",
    "@types/express": "^4.16.0",
    "@types/joi": "^13.4.2",
    "@types/knex": "^0.14.21",
    "@types/lodash": "~4.14.116",
    "@types/mocha": "~5.2.5",
    "@types/node": "~10.7.0",
    "chai": "~4.1.2",
    "chai-as-promised": "~7.1.1",
    "chai-jest-snapshot": "~2.0.0",
    "chance": "~1.0.16",
    "fork-ts-checker-webpack-plugin": "~0.4.9",
    "happypack": "~5.0.0",
    "husky": "~0.14.3",
    "lint-staged": "~7.2.2",
    "mocha": "~5.2.0",
    "nodemon": "~1.18.3",
    "patch-package": "^5.1.1",
    "postinstall-prepare": "^1.0.1",
    "prettier": "~1.14.2",
    "sinon": "~6.1.5",
    "sinon-chai": "~3.2.0",
    "source-map-support": "~0.5.8",
    "ts-loader": "~4.5.0",
    "ts-node": "~7.0.1",
    "tsconfig-paths": "~3.5.0",
    "tsconfig-paths-webpack-plugin": "~3.2.0",
    "tslint": "~5.11.0",
    "tslint-config-prettier": "~1.14.0",
    "tslint-sonarts": "~1.7.0",
    "typescript": "~3.0.1",
    "webpack": "~4.16.5",
    "webpack-cli": "~3.1.0",
    "webpack-node-externals": "~1.7.2"
  }
}
